{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "EasyGit",
  "identifier": "dev.marten-mrfcyt.easygit",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "EasyGit",
        "width": 1280,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "decorations": false,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "copyright": "Â© 2026 EasyGit Contributors",
    "shortDescription": "A modern, open-source Git client for Windows",
    "longDescription": "EasyGit is a native Windows Git client featuring conventional commits, worktree management, stash manager, diff viewer, and GitHub/GitLab integration.",
    "windows": {
      "nsis": {
        "installMode": "currentUser"
      }
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEE4MTIyMDQ2OEVCOTkzMEQKUldRTms3bU9SaUFTcU9RRXl2d2wvSloxWUdBRGJEOHlIYWszZWV6cnZHY0lnVkJuNkZxZS9Wck4K",
      "endpoints": [
        "https://github.com/Marten-Mrfc/EasyGit/releases/latest/download/latest.json"
      ]
    }
  }
}